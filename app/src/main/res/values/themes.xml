    <style name="Theme.d_day_calculator" parent="Base.Theme.d_day_calculator">
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimaryDark">@color/outerSpace</item>
        <item name="android:statusBarColor">@color/outerSpace</item>
        <item name="android:windowLightStatusBar">false</item>

        <style name="custom_dialog" parent="Theme.AppCompat.Dialog">
            <item name="android:windowIsFloating">false</item>
            <item name="android:windowFullscreen">false</item>
            <item name="android:windowBackground">@android:color/transparent</item>
            <item name="background">@android:color/black</item>
            <item name="android:backgroundDimEnabled">true</item>
            <item name="android:backgroundDimAmount">0.7</item>
        </style>
    </style>
